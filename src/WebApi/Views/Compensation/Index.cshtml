@{
    ViewBag.Title = "Compensations";
}

<link href="~/Content/Compensation/compensation.css" rel="stylesheet">
<link href="~/Content/Compensation/side-panel.css" rel="stylesheet">
<script src="~/Scripts/Compensation/compensation-side-panel.js"></script>
<script src="~/Scripts/Compensation/compensation.js"></script>

<h2>Compensations</h2>

<div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Employee name</th>
                <th>January</th>
                <th>February</th>
                <th>March</th>
                <th>April</th>
                <th>May</th>
                <th>June</th>
                <th>July</th>
                <th>August</th>
                <th>September</th>
                <th>October</th>
                <th>November</th>
                <th>Decemper</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: co.compensations">
            <tr data-bind="click: { double: coSide.show }">
                <td data-bind="text: Employee.Name"></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>

<!-- ko with: coSide -->
<div data-bind="if: isOpened" id="sidenav" class="sidenav">
    <a data-bind="click: { single: hide }" href="javascript:void(0)" class="closebtn">&times;</a>
    <p data-bind="text: employeeCompensations().Employee.Name"></p>
</div>
<!-- /ko -->

<!-- ko with: alert -->
<div class="tn-box tn-box-hoverpause tn-box-color-error">
    <p data-bind="text: message"></p>
</div>
<!-- /ko -->